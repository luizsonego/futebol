{
  "name": "classificacao-futebol",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:setup && next dev",
    "build": "npm run db:setup && prisma generate && bash scripts/run-migrations.sh && next build",
    "build:migrate": "npm run db:setup && prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:setup": "node scripts/setup-db.js",
    "db:migrate:postgres": "node scripts/create-postgres-migrations.js",
    "postinstall": "npm run db:setup && prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "next": "^14.2.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "eslint": "9.39.2",
    "eslint-config-next": "16.0.10",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}
